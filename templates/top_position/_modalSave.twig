<form id="saveTopPositionForm">
	<div class="modal fade" id="saveTopPositionModal" tabindex="-1" role="dialog" aria-labelledby="saveTopPositionModalLabel" aria-hidden="true">
		<input type="hidden" name="mode" id="mode" value="create"/>
		<input type="hidden" name="id" id="id" value=""/>
		<div class="modal-dialog modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="saveTopPositionModalLabel">Puestos Superiores</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="row">
						<div class="col-6">
							<label>Descripción<span class="ml-1 text-danger">*</span>
							</label>
							<input class="form-control" type="text" name="description" maxlength="50" required>
						</div>
						<div class="col-6">
							<label>Dirección<span class="ml-1 text-danger">*</span>
							</label>
							<select class="form-control" name="directionId" required>
								<option value="">Seleccione una opción</option>
								{% for direction in directions %}
									<option value="{{direction.id}}">{{direction.description}}</option>
								{% endfor %}
							</select>
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-2">
							<label>Fecha<span class="ml-1 text-danger">*</span>
							</label>
							<input class="form-control" type="text" name="dateM" value="{{'now'|date('d/m/Y')}}" readonly>
						</div>
						<div class="col-2">
							<label>Creado por<span class="ml-1 text-danger">*</span>
							</label>
							<input class="form-control" type="text" name="userM" value="{{app.user.username}}" readonly>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-outline-secondary" data-dismiss="modal">
						<i class="fas fa-times mr-2"></i>Cerrar</button>
					<button class="btn btn-info" type="submit">
						<i class="far fa-check-circle"></i>
						Guardar
					</button>
				</div>
			</div>
		</div>
	</div>
</form>
